@model MaintenanceReminder.Models.Device

@{
    ViewData["Title"] = "Dodaj";
}

<h1>Dodaj</h1>

<h4>urządzenie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SerialNumber" class="control-label"></label>
                <input asp-for="SerialNumber" class="form-control" />
                <span asp-validation-for="SerialNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manufacturer" class="control-label"></label>
                <select asp-for="ManufacturerId" class ="form-control" asp-items="ViewBag.ManufacturerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Maintainer" class="control-label"></label>
                <select asp-for="MaintainerId" class ="form-control" asp-items="ViewBag.MaintainerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Place" class="control-label"></label>
                <select asp-for="PlaceId" class="form-control" asp-items="ViewBag.PlaceId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DateTimeOfLastMaintenance" class="control-label"></label>
                <input asp-for="DateTimeOfLastMaintenance" class="form-control" />
                <span asp-validation-for="DateTimeOfLastMaintenance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateTimeOfNextMaintenance" class="control-label"></label>
                <input asp-for="DateTimeOfNextMaintenance" class="form-control" />
                <span asp-validation-for="DateTimeOfNextMaintenance" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 5px">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-top: 5px">
    <a asp-action="Index"><input type="button" value="Powrót do listy" class="btn btn-primary" /></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

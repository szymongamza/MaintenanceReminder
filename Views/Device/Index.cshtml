@model IEnumerable<MaintenanceReminder.Models.Device>

@{
    ViewData["Title"] = "Lista Urządzeń";
}

<h1>Lista urządzeń</h1>

<p>
    <a asp-action="Create">Dodaj urządzenie</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nazwa urządzenia
            </th>
            <th>
                Data ostatniego przeglądu
            </th>
            <th>
                Data następnego przeglądu
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTimeOfLastMaintenance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTimeOfNextMaintenance)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Szczegóły", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Usuń", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
